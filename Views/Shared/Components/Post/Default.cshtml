@using aznews.Models;
@using aznews.Utilities;
@model List<TblPost>

<div class="trending-area fix">
    <div class="container">
        <div class="trending-main">
            <!-- Trending Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="trending-tittle">
                        <strong>Tin nổi bật</strong>
                        <!-- <p>Rem ipsum dolor sit amet, consectetur adipisicing elit.</p> -->
                        <div class="trending-animated">
                            <ul id="js-news" class="js-hidden">
                                @{
                                    var trend = Model.Take(3).ToList();
                                    foreach (var t in trend)
                                    {
                                        <li class="news-item"><a href="#">@t.Title</a></li>
                                    }
                                }
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <!-- Trending Top -->
                    <div class="trending-top mb-30">
                        @{
                            foreach (var item in Model.Take(1).ToList())
                            {
                                var href = Function.titleRoute("posst", item.Title, item.PostId);
                                <div class="trend-top-img">
                                    <img src="assets/img/trending/trending_top.jpg" alt="">
                                    <div class="trend-top-cap">
                                        <span>@item.Author</span>
                                        <h2><a href="/@href">@item.Title</a></h2>
                                    </div>
                                </div>
                                Model.RemoveAt(0);
                            }
                        }

                    </div>
                    <!-- Trending Bottom -->
                    <div class="trending-bottom">
                        <div class="row">
                            @{
                                var top2_4 = Model.Take(3).ToList();
                                foreach (var t in top2_4)
                                {
                                    var href = Function.titleRoute("post", t.Title, t.PostId);
                                    <div class="col-lg-4">
                                        <div class="single-bottom mb-35">
                                            <div class="trend-bottom-img mb-30">
                                                <img src="assets/img/trending/trending_bottom3.jpg" alt="">
                                            </div>
                                            <div class="trend-bottom-cap">
                                                <span class="color3">HILLO</span>
                                                <h4><a href="/@href">@t.Title</a>
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                    Model.RemoveAt(0);
                                }
                            }
                        </div>
                    </div>
                </div>
                <!-- Riht content -->
                <div class="col-lg-4">
                    @{
                        foreach (var i in Model)
                        {
                            var href = Function.titleRoute("post", i.Title, i.PostId);
                            <div div class="trand-right-single d-flex">
                                <div class="trand-right-img">
                                    <img src="assets/img/trending/right5.jpg" alt="">
                                </div>
                                <div class="trand-right-cap">
                                    <span class="color1">Alo</span>
                                    <h4><a href="/@href">@i.Title</a>
                                    </h4>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>